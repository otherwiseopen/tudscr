%    \begin{macrocode}
    \or% color
%<*book|report|article>
      \cs@std@lock{tud@layout@cover}{1}%
%</book|report|article>
      \cs@std@lock{tud@layout@title}{5}%
      \cs@std@lock{tud@layout@part}{5}%
